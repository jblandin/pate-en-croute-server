{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/@types/*",
                "node_modules/*"
               ]
        },
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
          ],
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
